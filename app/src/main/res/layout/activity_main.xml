<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.boulila.islam.geekquiz.MainActivity">



    <TextView
         android:id="@+id/activity_main_helloText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Bienvenue dans GeekQuiz"
        android:layout_margin="11dp"
        android:padding="20dp"

        />


    <EditText
        android:id="@+id/activity_main_inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="Tapez votre nom" />

    <Button
        android:id="@+id/activity_main_play_btn"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:padding="30dp"
        android:text="Let's Go"
        android:textColor="#F5F2F3"
        android:textSize="20sp" />

</LinearLayout>
